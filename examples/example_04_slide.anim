
include slide

template MySlide inherit Rectangle
	fill = hsla(index / 3, 0.5, 0.5, 150)

	enter := 0s
	exit := enter + 2s
	transition_duration := 750ms

	text := "Slide"

	create Slide
		enter = parent.enter
		exit = parent.exit
		transition_duration = parent.transition_duration

	create Text
		text = parent.text
		font_size = 48
		x = 50%
		y = 50%

width = 400
height = 300

background = rgb(20, 21, 24)

frame_rate = 40

create MySlide
	text = "Slide 1"
	enter = 1s

create MySlide
	text = "Slide 2"
	enter = 3s

create MySlide
	text = "Slide 3"
	enter = 5s
